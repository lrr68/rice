#------------------------------------------------
#-- WM INDEPENDENT HOTKEYS:
#------------------------------------------------

#Sound commands
#increase sound volume
XF86AudioRaiseVolume
	sound_control u

#decrease sound volume
XF86AudioLowerVolume
	sound_control d

# mute sound
XF86AudioMute
	sound_control m

# toggle sound output
# and disable fucking sleep key for gods sake
XF86Launch1
	sound_control t
XF86AudioMicMute
	sound_control t
XF86Sleep
	sound_control t

#Screen Brightness controls
# increase screen brightness
XF86MonBrightnessUp
	brightnessctl s 5%+
 super + ctrl + +
	brightnessctl s 5%+

# decrease screen brightness
XF86MonBrightnessDown
	brightnessctl s 5%-
super + ctrl + minus
	brightnessctl s 5%-

# Media player controls
# Supports spotify
XF86AudioPlay
	playerctl play-pause
super + ctrl + p
	playerctl play-pause
	#dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT toggle

XF86AudioNext
	playerctl next
super + ctrl + period
	playerctl next
	#dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT next

XF86AudioPrev
	playerctl previous
super + ctrl + comma
	playerctl previous
	#dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT prev

# ==============================
#        COMMON BINDINGS
# ==============================

#reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd && sxhkd &
super + Return
	$TERMINAL
# super + shift + Return
# 	$TERMINAL2
super + w
	$BROWSER
super + r
	$TERMINAL -e ranger
super + b
	lockscreen
super + shift + s
	powermenu
super + p
	rofi -show drun -show-icons
super + shift + p
	rofi -show run -show-icons
super + f
	rofi -show window -show-icons
super + shift + m
	rofi -show calc -modi calc -no-show-match -no-sort -theme ~/.config/rofi/calc.rasi
super + d
	krita & killall redshift
super + e
	thunderbird
super + shift + e
	emacs
super + ctrl + Return
	toggle_sidebar
super + shift + b
	toggle_status_bar

# Print
Print
	flameshot gui
	#screengrab

# FUNCTION KEYS
super + F1
	sound_control -t
super + F2
	$TERMINAL --class floats -e pulsemixer
super + F10
	toggle_redshift
super + F11
	killall gotop || $TERMINAL -e gotop -l kitchensink
super + F12
	monitors
