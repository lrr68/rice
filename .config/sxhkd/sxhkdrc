#------------------------------------------------
#-- WM INDEPENDENT HOTKEYS:
#------------------------------------------------

#Sound commands
#increase sound volume
XF86AudioRaiseVolume
	sound_control u

#decrease sound volume
XF86AudioLowerVolume
	sound_control d

# mute sound
XF86AudioMute
	sound_control m

# toggle sound output
XF86Launch1
	sound_control t

XF86AudioMicMute
	sound_control t

# disable fucking sleep key for gods sake
XF86Sleep
	sound_control t

#Screen Brightness controls
# increase screen brightness
XF86MonBrightnessUp
	brightnessctl s 5%+;  #reloadbar

# decrease screen brightness
XF86MonBrightnessDown
	brightnessctl s 5%-; # reloadbar

# Media player controls
# Supports spotify
XF86AudioPlay
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT toggle
XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT next
XF86AudioPrev
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT prev

## in case keyboard does not have XF86 keys for audio/brightness controls, these are the alternative bindings
super + ctrl + p
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT toggle
super + ctrl + period
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT next
super + ctrl + comma
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous; [ $(pgrep -x mpc) ] && mpc --host=$MPD_HOST --port=$MPD_PORT prev
#Brightness
super + ctrl + minus
	brightnessctl s 5%-; # reloadbar
super + ctrl + +
	brightnessctl s 5%+;  #reloadbar


# ==============================
#        COMMON BINDINGS
# ==============================

#reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd && sxhkd &
super + Return
	samedir
super + shift + Return
	$TERMINAL2
super + w
	$BROWSER
super + r
	$TERMINAL -e ranger
super + b
	lockscreen
super + shift + s
	powermenu
super + p
	rofi -show drun -show-icons
super + shift + p
	rofi -show run -show-icons
super + f
	rofi -show window -show-icons
super + shift + m
	rofi -show calc -modi calc -no-show-match -no-sort -theme ~/.config/rofi/calc.rasi
super + d
	krita & killall redshift
super + e
	thunderbird
super + shift + e
	emacs

super + shift + b
	toggle_status_bar

# Print
Print
	flameshot gui
	#screengrab

# FUNCTION KEYS
super + F1
	sound_control -t
super + F2
	$TERMINAL --class floats -e pulsemixer
super + F10
	toggle_redshift
super + F11
	killall gotop || $TERMINAL --class floats -e gotop -l kitchensink
super + F12
	monitors
