#!/bin/sh

eww_open_lock=/tmp/eww_bars_open.lock

toggle_eww()
{
	if [ -f "$eww_open_lock" ];then
		killall eww
		rm "$eww_open_lock"
		eww -c ~/.config/eww/right-bar daemon
		eww -c ~/.config/eww/left-bar daemon
	else
		launch_eww_bars
	fi
}

toggle_awesome()
{
	awesome-client '
				for s in screen do
					s.mywibox.visible = not s.mywibox.visible
					if s.mybottomwibox then
						s.mybottomwibox.visible = not s.mybottomwibox.visible
					end
				end
				'
}

toggle_eww &
toggle_awesome &
