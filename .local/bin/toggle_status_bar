#!/bin/sh

eww_open_lock=/tmp/eww_bars_open.lock

toggle_eww()
{
	if [ -f "$eww_open_lock" ];then
		rm "$eww_open_lock"
		sh ~/.config/eww/left-bar/close_bar &
		sh ~/.config/eww/right-bar/close_bar &
	else
		launch_eww_bars
	fi
}

toggle_awesome()
{
	awesome-client '
				for s in screen do
					s.mywibox.visible = not s.mywibox.visible
					if s.mybottomwibox then
						s.mybottomwibox.visible = not s.mybottomwibox.visible
					end
				end
				'
}

toggle_eww &
toggle_awesome &
